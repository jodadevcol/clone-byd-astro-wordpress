---
import BYD from '@assets/byd.svg'
---

<header class='py-2 fixed top-0 left-0 w-full z-10'>
  <div class='max-w-7xl mx-auto flex items-center justify-between p-4 relative border-gray-200 border rounded-full'>
    <button>
      <span class='inline-flex items-center justify-center size-10 p-2 bg-gray-300 rounded-full'>
        <svg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke-width='1.5' stroke='currentColor' class='size-full max-w-6'>
          <path stroke-linecap='round' stroke-linejoin='round' d='M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5'></path>
        </svg>
      </span>
    </button>

    <div>
      <span class='inline-flex items-center max-w-32'>
        <BYD class={'size-full'} />
      </span>
    </div>

    <a href='#'>
      <span class='inline-flex items-center justify-center size-10 p-2 bg-gray-300 rounded-full'>
        <svg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke-width='1.5' stroke='currentColor' class='size-full max-w-6'>
          <path
            stroke-linecap='round'
            stroke-linejoin='round'
            d='M15.75 6a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0ZM4.501 20.118a7.5 7.5 0 0 1 14.998 0A17.933 17.933 0 0 1 12 21.75c-2.676 0-5.216-.584-7.499-1.632Z'></path>
        </svg>
      </span>
    </a>
  </div>
</header>
